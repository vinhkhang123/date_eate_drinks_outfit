<!-- views/news.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Danh sách điểm</title>
  <link rel="stylesheet" href="/css/app.css"> <!-- nếu có css riêng -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="p-4">

  <div class="container">
    <h1 class="mb-4">Danh sách điểm từ Google Sheet</h1>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Tên</th>
          <th>Điểm</th>
        </tr>
      </thead>
      <tbody>
        {{#each data}}
        <tr>
          <td>{{tên}}</td>
          <td>{{điểm}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

</body>
</html>
